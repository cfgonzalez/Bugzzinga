@using MvcJqGrid
<link href="../../Scripts/jquery-plugins/jquery-ui-1.8.19/css/smoothness/jquery-ui-1.9.0.custom.css"
    rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" media="screen" href="../../Scripts/jquery-plugins/jquery-jqGrid/css/ui.jqgrid.css" />
<script src="../../Scripts/jquery-plugins/jquery-jqGrid/js/i18n/grid.locale-en.js"
    type="text/javascript"></script>
<script src="../../Scripts/jquery-plugins/jquery-jqGrid/js/jquery.jqGrid.min.js"
    type="text/javascript"></script>
<script src="../../ViewsClientLogic/Home/Index.js" type="text/javascript"></script>
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>
    Home</h2>
<div class="quick-start">
    <div class="centered-container">
        <h2>
            Mis Proyectos</h2>
        <div class="sample first clearfix">
            <div class="left">
                <p>
                    En este panel se visualizan los proyectos disponibles para su administración. Haga
                    click derecho sobre el nombre de uno de ellos para acceder a su detalle.
                </p>
            </div>
            <div class="code">
                @(Html.Grid("grillaProyectos")
                    .SetCaption("Tareas asignadas a mi")
                    .AddColumn(new Column("Nombre").SetLabel("Nombre"))
                    .AddColumn(new Column("Descripcion").SetLabel("Descripcion"))
                        .SetUrl("/Home/TraerProyectosJson")
                    .SetAutoWidth(true)
                    .SetViewRecords(true)
                    .SetPager("pager"))
            </div>
        </div>
        <div class="sample clearfix">
            <h2>
                Mis Tareas</h2>
            <div class="left">
                <p>
                    En este panel se visualizan las tareas asignadas a su usuario. En el menú contextual
                    puede cambiar sus estados o seleccionar Abrir para ver los detalles</p>
            </div>
            <div class="code">
                @(Html.Grid("grillaTareas")
                    .SetCaption("Tareas asignadas a mi")
                    .AddColumn(new Column("Nombre").SetLabel("Nombre"))
                    .AddColumn(new Column("Descripcion").SetLabel("Descripcion"))
                        .SetUrl("/Home/TraerProyectosJson")
                    .SetAutoWidth(true)
                    .SetViewRecords(true)
                    .SetPager("pager"))
            </div>
        </div>
    </div>
</div>
