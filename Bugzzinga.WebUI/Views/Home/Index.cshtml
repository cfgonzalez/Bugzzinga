<script src="../../ViewsClientLogic/Home/Home.js" type="text/javascript"></script>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home</h2>


@(Html.Grid("basic")
    .SetCaption("Incidencias asignadas a mi")    
    .AddColumn(new Column("Nombre").SetLabel("Nombre"))
    .AddColumn(new Column("Descripcion").SetLabel("Descripcion"))
        .SetUrl("/Home/TraerProyectosJson")
    .SetAutoWidth(true)  
    .SetViewRecords(true)
    .SetPager("pager"))