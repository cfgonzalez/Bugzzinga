@using MvcJqGrid



<link href="../../Scripts/jquery-plugins/jquery-ui-1.8.19/css/ui-lightness/jquery-ui-1.8.19.custom.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" media="screen" href="../../Scripts/jquery-plugins/jquery-jqGrid/css/ui.jqgrid.css" />
<script src="../../Scripts/jquery-plugins/jquery-jqGrid/js/i18n/grid.locale-en.js" type="text/javascript"></script>
