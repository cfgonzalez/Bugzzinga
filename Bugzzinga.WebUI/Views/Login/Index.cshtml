@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link href="../Content/Login.css" rel="stylesheet" type="text/css" />
</head>
<body class="principal">
@using (Html.BeginForm("Autenticar", "Login", FormMethod.Post, new { id = "LoginForm" }))
{
    <table width="100%" border="0">
        <tr>
            <td width="50%" align="right" valign="middle">
                <img src="../Content/Images/Login/LogoLogin.png" />
            </td>
            <td style="padding: 0" align="left">
                <img style="width: 2px; background: #666666; height: 500px" src="../Content/Images/Login/transparente.png" />
            </td>
            <td align="left" valign="middle">
                <div id="logindivContainer">
                    <div id="logindivMainContent">
                        <div id="logindivLogo">
                        </div>
                        <div class="logindivForm">
                            <div class="logindivFormCell">
                                <table>
                                    <tr>
                                        <td>
                                            Usuario:
                                        </td>
                                        <td>
                                            <input id="txtUsuario" name="usuario" type="text" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Contraseña:
                                        </td>
                                        <td>
                                            <input id="txtClave" name="clave" type="text" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2" align="right">
                                            <input type="submit" value="Ingresar" class="boton" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
            </td>
        </tr>
    </table>
}
</body>
</html>
