@*Lógica de las vistas*@
<script src="@Url.Content("~/ViewsClientLogic/IncidenciaDetalle/Index.js")" type="text/javascript"></script>

@*Direccion de los Actions para ajax*@
<script type="text/javascript">
    var partialImagenPerfilURL = '@Url.Action("CargarFoto", "IncidenciaDetalle")';
</script>

@* Layout *@
@{
    ViewBag.Title = "IncidenciaDetalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* Tipificación de la vista *@
@model Bugzzinga.ViewModels.IncidenciaViewModel

<h2>
    Detalle Incidencia
</h2>
@using (Html.BeginForm("Guardar", "IncidenciaDetalle", FormMethod.Post, new { id = "IncidenciaForm" }))
{
    <div>
        Nombre:
        <input type="text" name="Nombre" value="@Model.Nombre" />
    </div>
    <div>
        Descripcion
        <input type="text" name="Descripcion" value="@Model.Descripcion" />
    </div>
    <div>
        Nombre Usuario
        <input type="text" name="NombreUsuario" value="@Model.NombreUsuario" />
    </div>  
    <br />  
    <div>
        Ver imagen perfil &nbsp;
        <input type="button" id="btnVerFoto" value="cargar"/>
        <div id="foto" style="height: 100px; width: 120px; border: 1px solid black;">
            <div id="loading" style="float: left; display: none">
                <img src="../../Content/Images/progress1.gif" width="20px" height="20px" />
            </div>
        </div>
    </div>
    <br />
    <div>
        <input type="submit" value="Guardar" />
    </div>
}
